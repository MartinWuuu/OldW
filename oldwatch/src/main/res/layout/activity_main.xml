<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/activity_main"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context="com.brave.oldwatch.MainActivity"
    android:orientation="vertical"
    android:background="#f1f0f0">


    <FrameLayout
        android:id="@+id/activity_main_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        ></FrameLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#f1f0f0"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal"
        android:background="#fff">
        <ImageView
            android:id="@+id/activity_main_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/ic_bottomtabbar_feed"
            android:scaleType="centerInside"/>

        <ImageView
            android:id="@+id/activity_main_notice"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="gone"
            android:src="@mipmap/ic_bottomtabbar_notification"
            android:scaleType="centerInside"/>

        <ImageView
            android:id="@+id/activity_main_msg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/ic_bottomtabbar_message"
            android:scaleType="centerInside"/>

        <ImageView
            android:id="@+id/activity_main_more"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/ic_bottomtabbar_more"
            android:scaleType="centerInside"/>
    </LinearLayout>


</LinearLayout>
