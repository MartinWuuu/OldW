<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:padding="@dimen/activity_horizontal_margin"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/view_book_list_item_img"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@mipmap/ic_book_1"
        android:scaleType="centerCrop"
        android:layout_marginRight="@dimen/activity_horizontal_margin"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/view_book_list_item_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:textColor="#000"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:text="毛泽东思想"/>

        <TextView
            android:id="@+id/view_book_list_item_details"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textColor="#000"
            android:singleLine="true"
            android:gravity="center_vertical"
            android:text="去年用过之后留着没什么用"/>

        <TextView
            android:id="@+id/view_book_list_item_price"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:textColor="#ff0000"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:text="20元"/>




    </LinearLayout>



</LinearLayout>
