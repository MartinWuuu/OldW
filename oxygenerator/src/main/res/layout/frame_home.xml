<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/frame_home_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
           >
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#3e90f5"
                android:alpha="0.5"
                />
            <TextView
                android:id="@+id/frame_home_1_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:gravity="center_horizontal"
                android:textColor="#fff"
                android:layout_marginBottom="8dp"
                android:layout_above="@+id/frame_home_1_ox"
                android:text="房间1"/>

            <TextView
                android:id="@+id/frame_home_1_ox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:gravity="center_horizontal"
                android:textColor="#fff"
                android:layout_centerInParent="true"
                android:layout_marginBottom="8dp"
                android:text="氧浓度：23.56%"/>

            <TextView
                android:id="@+id/frame_home_1_sw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:gravity="center_horizontal"
                android:textColor="#fff"
                android:layout_below="@+id/frame_home_1_ox"
                android:text="机器状态：关"/>
        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/frame_home_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
