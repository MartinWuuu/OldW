                android:alpha="0.8"
                />
            <TextView
                android:id="@+id/frame_home_2_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:gravity="center_horizontal"
                android:textColor="#fff"
                android:layout_marginBottom="8dp"
                android:layout_above="@+id/frame_home_2_ox"
                android:text=""/>

            <TextView
                android:id="@+id/frame_home_2_ox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:gravity="center_horizontal"
                android:textColor="#fff"
                android:layout_marginBottom="8dp"
                android:layout_centerInParent="true"
                android:text=""/>

            <TextView
                android:id="@+id/frame_home_2_sw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:gravity="center_horizontal"
                android:textColor="#fff"
                android:layout_below="@+id/frame_home_2_ox"
                android:text=""/>
        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
